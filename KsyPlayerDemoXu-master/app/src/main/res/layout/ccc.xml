<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <ImageView
        android:id="@+id/retail_item_product_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"

        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/retail_item_product_img">
        <TextView
            android:id="@+id/retail_item_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="小口瓶+优倍新鲜杯优惠套装"

            />
        <TextView
            android:id="@+id/retail_item_product_additional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

           android:layout_below="@+id/retail_item_product_name"
            android:text="共2件，单价：￥20"

            />
    </RelativeLayout>




</RelativeLayout>